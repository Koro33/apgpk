{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "run",
            "args": [
                "--release",
                "-p",
                "apgpk-cli",
                "--",
                "--pattern",
                "./apgpk-cli/tests/pattern.txt"
            ],
            "problemMatcher": [
                "$rustc",
                "$rust-panic"
            ],
            "label": "Run apgpk-cli with pattern (release)"
        }
    ]
}